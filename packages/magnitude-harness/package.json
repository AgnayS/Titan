{
  "name": "magnitude-harness",
  "version": "0.0.1",
  "description": "Modular web harness utilities for browser automation",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "bin": {
    "magnitude-harness": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magnitudedev/magnitude.git"
  },
  "homepage": "https://github.com/magnitudedev/magnitude#readme",
  "bugs": {
    "url": "https://github.com/magnitudedev/magnitude/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "browser",
    "automation",
    "harness",
    "playwright",
    "web",
    "testing",
    "magnitude",
    "typescript"
  ],
  "scripts": {
    "build": "tsc && pkgroll",
    "check": "tsc --noEmit"
  },
  "author": {
    "name": "Magnitude",
    "email": "founders@magnitude.run",
    "url": "https://magnitude.run"
  },
  "contributors": [
    "Anders Lie <anders@magnitude.run>"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@types/node": "^25.0.10",
    "@types/object-hash": "^3.0.6",
    "pkgroll": "^2.22.0",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "eventemitter3": "^5.0.4",
    "object-hash": "^3.0.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "playwright": "npm:patchright@^1.57.0",
    "sharp": "^0.34.5"
  }
}
